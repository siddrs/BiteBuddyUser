<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/secondaryContainer"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="-9dp"
            tools:layout_editor_absoluteY="0dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/menuImageCardView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:foregroundGravity="center"
                android:backgroundTint="@color/background"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/menuImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:backgroundTint="@color/background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/food_placeholder1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/menuFoodName"
                android:layout_width="146dp"
                android:layout_height="63dp"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                android:text="Paneer Tikka Masala with Kanda Bhaji"
                android:maxLines="3"
                android:scrollHorizontally="true"
                android:textSize="14sp"
                android:ellipsize="end"
                android:textColor="@color/primaryContainer_highContrast"
                app:layout_constraintBottom_toBottomOf="@+id/menuImageCardView"
                app:layout_constraintStart_toEndOf="@+id/menuImageCardView"
                app:layout_constraintTop_toTopOf="@+id/menuImageCardView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menuAddToCartButton"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/addtocartshape"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="ADD TO CART"
                android:textColor="@color/onPrimary"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/menuFoodName"
                app:layout_constraintTop_toBottomOf="@+id/menuPrice" />

            <TextView
                android:id="@+id/menuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"
                android:drawableTint="@color/primaryContainer_highContrast"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="PRICE"
                android:textColor="@color/primaryContainer_highContrast"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/menuAddToCartButton"
                app:layout_constraintEnd_toEndOf="@+id/menuAddToCartButton"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="@+id/menuAddToCartButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="spread_inside" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>